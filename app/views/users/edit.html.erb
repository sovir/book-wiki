<% provide(:title, "用户资料更新") %> 
<div class="container">
<h1>更新用户资料</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name , "姓名："%>
      <%= f.text_field :name %>

      <%= f.label :email , "邮箱："%>
      <%= f.text_field :email %>

      <%= f.label :password , "密码："%>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "再次输入以便确认：" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">更换头像</a>
  </div>
</div>
</div>
