<% provide(:title, '注册') %>
<div class="container">
<h1>注册</h1>

<div class="row">
  <div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, "姓名："%>
      <%= f.text_field :name %>

      <%= f.label :email, "邮箱："%>
      <%= f.text_field :email %>

      <%= f.label :password,"密码："%>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "再次输入以便确认：" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
</div>
</div>
</div>
